<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/viewImageRecipes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewTitleRecipes"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewImageRecipes"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDescRecipes"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="@id/viewTitleRecipes"
        app:layout_constraintStart_toStartOf="@id/viewTitleRecipes"
        app:layout_constraintTop_toBottomOf="@id/viewTitleRecipes" />

    <View
        android:id="@+id/viewIconFirst"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/viewTitleRecipes"
        app:layout_constraintTop_toBottomOf="@id/viewDescRecipes" />

    <View
        android:id="@+id/viewIconSecond"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/large_margin"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconFirst"
        app:layout_constraintTop_toBottomOf="@id/viewDescRecipes" />

    <View
        android:id="@+id/viewIconThird"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/large_margin"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconSecond"
        app:layout_constraintTop_toBottomOf="@id/viewDescRecipes" />

</androidx.constraintlayout.widget.ConstraintLayout>